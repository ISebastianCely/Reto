@model List<Reserva>
<h1>Reservas</h1>
<p>
	<a class="btn btn-success"asp-action="Create">Registrar</a>
</p>
<form asp-controller="Reserva" asp-action="Index">
	<p>
		Buscar número de reserva: <input type="text" name="buscar" class="form-text" </input>
		<input type="submit" value="Buscar" class="btn btn-sm btn-dark"></input>
	</p>
</form>
<div class="container container-fluid card">
	<div class="row card-body">
		<div class="col">
			<table class='table table-striped table-fluid table-hover table-fluid'>
				<thead>
					<tr>
						<th>
							# Reserva
						</th>
						<th> 
							Cliente
						</th>
						<th>
							Fecha
						</th>
						<th>
							Cantidad de personas
						</th>
						<th>
							Motivo
						</th>
						<th>
							Observaciones
						</th>
						<th>
							Estado
						</th>
						<th>
							Opciones
						</th>
						<th>
							Informe
						</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var resv in Model)
					{
							<tr>
								<td>
								@Html.DisplayFor(c => resv.ReservaId)
								</td>
								<td>
									@Html.DisplayFor(c => resv.ClienteId)
								</td>
								<td>
									@Html.DisplayFor(c => resv.Fecha)
								</td>
								<td>
									@Html.DisplayFor(c => resv.Cantidad)
								</td>
								<td>
									@Html.DisplayFor(c => resv.Motivo.Tipo)
								</td>
									<td>
									@Html.DisplayFor(c => resv.Observaciones)
								</td>
								<td>
									@if (resv.Estado == true)
										@Html.Encode("Activo")
									@if (resv.Estado == false)
										@Html.Encode("Inactivo")
								</td>
								<td>
									<a class="btn btn-warning" asp-action="Edit" asp-route-id="@resv.ReservaId">Editar</a> |
									<a class="btn btn-danger" asp-action="Delete" asp-route-id="@resv.ReservaId">Borrar</a>
								</td>
								<td>
									<a class="btn btn-info text-white" asp-action="Imprimir" asp-route-idreserva="@resv.ReservaId">Imprimir</a> 
								</td>

							</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>

