@using Reto.Models.ViewModels
@model ClienteViewModel

<h1>Crear Nuevo Cliente </h1>
</hr>
<div class="row">
	<div class="column">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"> </div>
			<div class="row">
				<div class="form-group col-md-4">
				<label asp-for="ClienteId" class="control-label"> </label>
				<input asp-for="ClienteId" class="form-control" />
				<span asp-validation-for="ClienteId" class="text-danger"> </span>
				</div>
				<div class="form-group col-md-8">
					<label asp-for="Nombre" class="control-label"> </label>
					<input asp-for="Nombre" class="form-control" />
					<span asp-validation-for="Nombre" class="text-danger"> </span>
				</div>
			</div>
			<div class="row">
				<div class="form-group col-md-4">
					<label asp-for="Telefono" class="control-label"> </label>
					<input asp-for="Telefono" class="form-control" />
					<span asp-validation-for="Telefono" class="text-danger"> </span>
				</div>
				<div class="form-group col-md-4">
					<label asp-for="Correo" class="control-label"> </label>
					<input asp-for="Correo" class="form-control" />
					<span asp-validation-for="Correo" class="text-danger"> </span>
				</div>
				<div class="form-group col-md-4">
					<label asp-for="Edad" class="control-label"> </label>
					<input asp-for="Edad" class="form-control" />
					<span asp-validation-for="Edad" class="text-danger"> </span>
				</div>
			</div>
			<div class="row">
				<div class="form-group col-md-6">
					<label asp-for="DepartamentoId" class="control-label"></label>
					<select asp-for="DepartamentoId" class="form-control" asp-items="ViewBag.Departamentos" value="Departamento"><p>Seleccionar</p></select>
					<span asp-validation-for="DepartamentoId" class="text-danger"></span>
				</div>
				<div class="form-group col-md-6">
					<label asp-for="CiudadId" class="control-label"></label>
					<select asp-for="CiudadId" class="form-control" asp-items="ViewBag.Ciudades" value="Seleccionar">Seleccionar</select>
					<span asp-validation-for="CiudadId" class="text-danger"></span>
				</div>
			</div>
			<div class="row">
				<div class="form-group col-md-8">
					<input type="submit" value="Crear" class="btn btn-primary col-md-2"/>
				</div>
			</div>
			
		</form>
	</div>
</div>

@section Scripts{
	@{
		//vista parcial
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}